<h1>New game</h1>
<% @letters.each do |letter| %>
<h3 class="btn btn-primary"><%= letter.capitalize %></h3>
<% end %>
<p>What is the longest word you can find?</p>
<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word">
  <input type="submit" value="Play" class="border btn btn-primary">
</form>
